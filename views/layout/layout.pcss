* {
    box-sizing: border-box;
}
article,
aside,
header,
nav,
section {
    display: block;
}
html {
    font-size: 100%;

    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: 100%;
    -webkit-tap-highlight-color: transparent;
}
.layout {
    display: flex;

    margin: auto;
    max-width: 100%;
    width: 800px;
    padding: 0 10px;

    font: 16px/1.4em Lucida Grande, Candara, Arial, sans-serif;

    flex-flow: column;

    color: #524846;
    background-color: #f7f6ee;
}

h1,
h2 {
    line-height: 1em;
}
a {
    transition: color .2s ease;

    color: #08c;
}
a:hover,
a:focus {
    color: #005580;
    outline: none;
}
a:active {
    color: red;
    outline: none;
}
